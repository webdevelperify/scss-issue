{
  "compilerOptions": {
    "rootDirs": [".", "__generated__"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "__generated__/*"]
    },
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "__generated__/**/*"],
  "exclude": [
    "node_modules"
  ],
}